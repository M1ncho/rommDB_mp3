<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/layout_half1"
        android:background='@color/top_color'
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/logo_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableStart="@drawable/home_icon"
            android:padding="15dp"
            android:id="@+id/tv_home"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.44"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_half1"
        android:layout_marginTop="10dp"
        android:id="@+id/linear_half1"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.25"
            android:gravity="center"
            android:id="@+id/iv_video"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/main_image"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text='@string/notice'
                android:textSize="30dp"
                android:fontFamily="@font/nanumsquare_b"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:drawableTop="@drawable/notice_icon"
                android:paddingTop="65dp"
                android:id="@+id/tv_notice"
                android:background="@color/notice_color"
                android:layout_marginBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text='@string/download'
                android:textSize="25dp"
                android:fontFamily="@font/nanumsquare_b"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:drawableTop="@drawable/down_icon"
                android:paddingTop="65dp"
                android:id="@+id/tv_download"
                android:background="@color/down_color"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.22"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_half1"
        android:id="@+id/linear_half2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text='@string/way'
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:gravity="center"
            android:drawableTop="@drawable/way_icon"
            android:paddingTop="65dp"
            android:id="@+id/tv_way"
            android:background="@color/way_color"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text='@string/maintenance'
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:gravity="center"
            android:drawableTop="@drawable/as_maintan_icon"
            android:paddingTop="65dp"
            android:id="@+id/tv_Maintenance"
            android:background="@color/maintan_color"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text='@string/call'
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:gravity="center"
            android:drawableTop="@drawable/call_icon"
            android:paddingTop="65dp"
            android:id="@+id/tv_call"
            android:background="@color/call_color"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintTop_toBottomOf="@id/linear_half2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text='@string/song'
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:gravity="center"
            android:drawableTop="@drawable/song_icon"
            android:paddingTop="65dp"
            android:id="@+id/tv_song"
            android:background="@color/song_color"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/tv_q_an"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text='@string/Qan_a'
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:drawableTop="@drawable/qana_icon"
            android:paddingTop="65dp"
            android:background="@color/qan_color"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text='@string/recipes'
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumsquare_b"
            android:drawableTop="@drawable/recipes_icon"
            android:paddingTop="65dp"
            android:gravity="center"
            android:id="@+id/tv_recipes"
            android:background="@color/recipes_color"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bottom_color"
        >

        <ImageView
            android:layout_width="29dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/face_icon"
            android:id="@+id/iv_face"
            />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/instar_icon"
            android:id="@+id/iv_instar"
            />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/kakao_icon"
            android:id="@+id/iv_kakao"
            />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/blog_icon"
            android:id="@+id/iv_blog"
            />

    </LinearLayout>


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/wb_pdf"
        />



</androidx.constraintlayout.widget.ConstraintLayout>